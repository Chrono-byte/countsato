// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Guild {
    id      String   @id
    members Member[]

    countChannelId String?
    currentCount   Int     @default(0)
    highestCount   Int     @default(0)

    lastCountMemberId     String?
    lastCountTimestamp    DateTime @default(now())
    highestCountMemberId  String?
    highestCountTimestamp DateTime @default(now())
}

model User {
    id          String   @id
    memberships Member[]
}

model Member {
    guildId String
    userId  String
    guild   Guild  @relation(fields: [guildId], references: [id])
    user    User   @relation(fields: [userId], references: [id])

    scoreValid   Int @default(0)
    scoreHighest Int @default(0)
    scoreMercy   Int @default(0)
    scoreInvalid Int @default(0)

    lastActiveCount       Int      @default(0)
    lastActiveTimestamp   DateTime @default(now())
    highestValidCount     Int      @default(0)
    highestValidTimestamp DateTime @default(now())

    @@id([guildId, userId])
}
